  "devDependencies": {
    "@types/node": "22.18.9",
    "@types/react": "^17.0.87",
    "@types/react-dom": "^17.0.26",
    "npm-run-all": "^4.0.2",
    "sass": "1.93.2",
    "react-scripts-ts": "3.1.0",
    "typescript": "^5.9.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
        "optional": true
    }
  },
  "scripts": {
    "tsc-compile": "tsc ./src/components/Splitters/*.tsx --outDir ./lib --jsx react --target ES5",
    "build-css": "sass --no-source-map ./src",
